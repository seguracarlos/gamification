<?php

namespace Gamification\Services;
//incluir model
use Gamification\Model\UserCategoryModel;

class UserCategoryService
{
	private $usercategoryModel;

	public function   __construct(){
		$this->usercategoryModel = new UserCategoryModel();
	}
	
	public function getCategoriesByUser($id_user){
		
		$usercategory = $this->usercategoryModel->getCategoryByUser($id_user);
		echo "<pre>"; print_r($usercategory);exit;
		return $usercategory;
	}

	public function updateCategory($formData){
		//echo "<pre>"; print_r($formData);exit;
		// enviar solo los parametros que queremos modificar
		$data = array(
			"id" => $formData['id'],
			"name" => $formData['name'],
			"badge" => $formData['badge'],
			"imgpath" => $formData['imgpath'],
			"points" => $formData['points']
		);
		//llamada al modelo
		$category = $this->categoryModel->updateCategory($data);
		return $category;

	}

}